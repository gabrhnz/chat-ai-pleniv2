    "debug:database": "node scripts/debug-database.js",
    "test:chat": "node scripts/test-chat.js",
    "load:sample": "node scripts/load-sample-data.js",
    "test:local": "node scripts/test-local.js",
    "scrape:web": "node scripts/scrape-unc-website.js",
    "insert:scraped": "node scripts/insert-generated-faqs.js",
    "import:sql": "node scripts/import-sql-faqs.js",
    "add:conversational": "node scripts/add-conversational-faqs.js",
    "review:faqs": "node scripts/review-and-clean-faqs.js",
    "delete:marked": "node scripts/delete-marked-faqs.js"
