{
  "name": "faq-bot-rag",
  "version": "2.0.0",
  "description": "FAQ Bot con RAG (Retrieval-Augmented Generation) para comunidades universitarias. Supabase + pgvector + OpenRouter.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "setup:env": "node scripts/setup-env.js",
